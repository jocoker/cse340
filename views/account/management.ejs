<!-- **********************************************
     * Account Management View
     * --------------------------------------------
     * Displays the account dashboard after login.
     * Shows flash messages and a personalized greeting.
     * Provides link to update account information.
     * Displays inventory management section for
     * users with Employee or Admin privileges.
     ********************************************** -->

<main class="mgmnt-wrapper">
  <h1><%= title %></h1>

  <% if (message) { %>
    <div class="flash-message">
      <%= message %>
    </div>
  <% } %>

  <h2 class="account-greeting">Welcome <%= accountData.account_firstname %></h2>

  <p class="account-update-link">
    <a href="/account/update/<%= accountData.account_id %>">
      Update Account Information
    </a>
  </p>

  <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
    <section class="inventory-section">
      <h3>Inventory Management</h3>
      <p>
        <a class="inventory-link" href="/inv/">Manage Inventory</a>
      </p>
    </section>
  <% } %>
</main>
